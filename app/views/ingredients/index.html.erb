<div class="container mt-3">
  <div class="row">
    <div class="col d-flex justify-content-between align-items-center">
      <h1>List of all ingredients</h1>
      <%= link_to "Add an ingredient", new_ingredient_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul>
      <% @ingredients.each do |ingredient| %>
        <li><%= ingredient.name %> - <%= link_to "Edit", edit_ingredient_path(ingredient) %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
