<div class="container mt-3 content-box px-5 py-4">
  <div class="row">
    <div class="col d-flex justify-content-between align-items-center">
      <h1>List of all ingredients</h1>
      <%= link_to "Add an ingredient", new_ingredient_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul>
      <% @ingredients.each do |ingredient| %>
        <li><%= ingredient.name %>
        <%= link_to edit_ingredient_path(ingredient) do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to ingredient_path(ingredient), method: :delete, data: {confirm: 'Are you sure?'} do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
