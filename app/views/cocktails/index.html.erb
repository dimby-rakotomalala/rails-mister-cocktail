<div class="container mt-3">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail) do  %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/featured/?<%= cocktail.name %>')">
              <%= cocktail.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
