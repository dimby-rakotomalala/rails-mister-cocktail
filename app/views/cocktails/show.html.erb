<div class="container mt-3">
  <div class="row">
    <div class="col d-flex align-items-center">
      <!-- <div>
        <%#= link_to "Edit cocktail", edit_cocktail_path(@cocktail), class: "btn btn-secondary" %>
        <%#= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      </div> -->
    </div>
  </div>
  <div class="row content-box">
    <% if !@cocktail.photo.attached? %>
      <div class="col-5 cocktail-image" style="background-image: url('https://source.unsplash.com/featured/?<%= @cocktail.name %>')">
    <% else %>
      <div class="col-5 cocktail-image" style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400 %>')">
    <% end %>
    </div>
    <div class="col-7 p-3">
      <div class="cocktail-title d-flex align-items-center">
        <h1><%= @cocktail.name.capitalize %></h1>
        <%= link_to edit_cocktail_path(@cocktail), class: "ml-3" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to cocktail_path(@cocktail), method: :delete, data: {confirm: 'Are you sure?'}, class: "ml-3" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <h3 class="mt-3">Composition :</h3>
      <ul class="cocktail-list-dose">
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.amount %> <%= dose.description %> of <%= dose.ingredient.name %></li>
      <% end %>
      </ul>
      <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="fas fa-plus"></i> Add a dose
      <% end %>
    </div>
  </div>
</div>
